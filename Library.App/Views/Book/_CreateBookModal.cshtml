<div id="createBookModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">წიგნის დამატება</h5>
                <button id="cancelCreateBook" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Create">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="title">დასახელება</label>
                        <input type="text" class="form-control" id="title" name="Title" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="description">აღწერა</label>
                        <textarea class="form-control" id="description" name="Description" rows="3"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label for="image">სურათის ლინკი</label>
                        <input type="text" class="form-control" id="image" name="Image" pattern="https?://.+">
                    </div>
                    <div class="form-group mb-3">
                        <label for="rating">რეიტინგი</label>
                        <input type="number" class="form-control" id="rating" name="Rating" min="0" max="5" step="0.1">
                    </div>
                    <div class="form-group">
                        <label for="authorIds">ავტორები</label>
                        <select class="form-control" id="authorIds" name="AuthorIds" multiple>
                            @foreach (var author in Model.AllAuthors)
                            {
                                <option value="@author.Id">
                                    @author.FirstName @author.LastName
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">დამატება</button>
                </div>
            </form>
        </div>
    </div>
</div>